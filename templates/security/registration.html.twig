
{% block stylesheets %}

<link href="{{ asset('css/registration.css') }}" rel="stylesheet" media="all">
{% endblock %}



<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">

            <h3>Bienvenue</h3>
            <form action="{{ path('admin_login')}}">
            <input type="submit" name="" value="Login" /><br/>
            </form>
        </div>
        <div class="col-md-9 register-right">
            <img src="{{ asset('images/icon/logo.png')}} "/>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Ajouter Nouvel Utilisateur</h3>
                    {{ form_start(form) }}
                    <div class="row register-form">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_errors(form.username) }}
                                {{ form_widget(form.username ,  {'attr': {'placeholder': 'Prénom' , 'class': 'form-control'}})}}
                                {{ form_help(form.username ) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email ,  {'attr': {'placeholder': 'email' , 'class': 'form-control'}})}}
                                {{ form_help(form.email ) }}
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_errors(form.password) }}
                                {{ form_widget(form.password ,  {'attr': {'placeholder': 'Mot de passe' , 'class': 'form-control'}})}}
                                {{ form_help(form.password ) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.confirm_password) }}
                                {{ form_widget(form.confirm_password ,  {'attr': {'placeholder': 'Verifier mot de  passe' , 'class': 'form-control'}})}}
                                {{ form_help(form.confirm_password ) }}
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btnRegister"  value="Créer"/>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
{% block body %}{% endblock %}


