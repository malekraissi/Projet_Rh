{% extends 'base.html.twig' %}

{% block title %}TypeConge{% endblock %}

{% block body %}
    <h1>Type de Congés</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ type_conge.nom }}</td>
            </tr>
            <tr>
                <th>Nbre_jour</th>
