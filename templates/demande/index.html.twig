{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Liste de demandes</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom de salari√©</th>
                <th>Type</th>
                <th>NbreJour</th>
                <th>Chef de projet</th>
                <th>Date debut</th>
                <th>Date fin</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.nom }}</td>
                <td>{{ demande.type }}</td>
                <td>{{ demande.nbreJour }}</td>
                <td>{{ demande.validateur }}</td>
                <td>{{ demande.dateDeb ? demande.dateDeb|date('d-m-y') : '' }}</td>
                <td>{{ demande.dateFin ? demande.dateFin|date('d-m-y') : '' }}</td>

                <td>
                    <a href="{{ path('demande_show', {'id': demande.id}) }}">Valider/Refuser</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">pas de demande</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
