{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>

                <td>{{ client.nom }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.tel }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">Afficher</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de data</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Cr√©er nouveau client</a>
{% endblock %}
