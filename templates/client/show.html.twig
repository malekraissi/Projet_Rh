{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ client.tel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">liste des clients</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">Modifier</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
